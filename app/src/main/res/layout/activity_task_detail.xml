<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#1976D2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_revert"
                        android:contentDescription="Back"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chi tiáº¿t Task"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="12dp"/>

                    <!-- Edit Button -->
                    <ImageButton
                        android:id="@+id/btnEditMode"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_edit"
                        android:contentDescription="Edit"
                        app:tint="#FFFFFF" />

                    <!-- Delete Button -->
                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_delete"
                        android:contentDescription="Delete"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/tvDetailStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TODO"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/badge_todo"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Task Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ThÃ´ng tin Task"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- Project -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDetailProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Project Name"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TiÃªu Ä‘á» *"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etDetailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:enabled="false"
                    android:background="@null"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MÃ´ táº£"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <EditText
                    android:id="@+id/etDetailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="Task Description"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:enabled="false"
                    android:background="@null"
                    android:padding="8dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="16dp"/>

                <!-- Due Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NgÃ y háº¿t háº¡n *"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:id="@+id/layoutDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDetailDueDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“… 25/12/2024"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="8dp"/>

                    <ImageButton
                        android:id="@+id/btnEditDueDate"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:visibility="gone"
                        android:contentDescription="Change Date"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Assignees Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NgÆ°á»i thá»±c hiá»‡n"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDetailAssignees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Change Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatusChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thay Ä‘á»•i tráº¡ng thÃ¡i"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <RadioGroup
                    android:id="@+id/rgDetailStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbDetailTodo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ To Do"
                        android:textSize="16sp"
                        android:padding="8dp"/>

                    <RadioButton
                        android:id="@+id/rbDetailInProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âš¡ In Progress"
                        android:textSize="16sp"
                        android:padding="8dp"/>

                    <RadioButton
                        android:id="@+id/rbDetailInReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘€ In Review"
                        android:textSize="16sp"
                        android:padding="8dp"/>

                    <RadioButton
                        android:id="@+id/rbDetailDone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âœ… Done"
                        android:textSize="16sp"
                        android:padding="8dp"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/btnCancelEdit"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Há»§y"
                android:textSize="16sp"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSaveEdit"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="LÆ°u thay Ä‘á»•i"
                android:textSize="16sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </LinearLayout>
</ScrollView>