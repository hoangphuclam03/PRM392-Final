<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRM392"
        android:name=".MyApp">
        <activity
            android:name=".CalendarEventsActivity"
            android:exported="false" />
        <activity android:name=".TeamListActivity" />
        <activity
            android:name=".ChatActivity"
            android:exported="false" /> <!-- ✅ Màn hình chính sau khi login -->
        <activity
            android:name=".ListProjectsActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="true" /> <!-- Màn hình đăng ký -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" /> <!-- Màn hình đăng nhập -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateManagingProjectActivity" android:exported="false" />


        <service
            android:name=".FCMNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".AddMemberActivity"
            android:exported="false" />
        <activity
            android:name=".RemoveMemberActivity"
            android:exported="false" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />


    </application>

</manifest>